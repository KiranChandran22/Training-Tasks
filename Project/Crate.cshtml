@using System.Data
@using System.Data.SqlClient
@{
    ViewBag.Title = "Crate";
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Roboto', sans-serif;
    }
    body {
        width: 100%;
        height: 100vh;
        background:url('../../Pizza4.jpeg');
        overflow: hidden;
        cursor: url('../../cursor.png'), auto;
    }
    label {
        font-size:16px;
        color:darkred;
    }

    .input-group input:focus ~ label,
    .input-group input:valid ~ label {
        top: -5px;
        color: #2691d9;
    }

    .input-group input:focus ~ span::before,
    .input-group input:valid ~ span::before {
        width: 100%;
    }

    .input-group input {
        width: 100%;
        padding: 0 5px;
        height: 40px;
        font-size: 16px;
        border: none;
        background: none;
        outline: none;
    }

    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        height:stretch;
        background: white;
        border-radius: 10px;
        box-shadow: 10px 10px 15px rgba(0,0,0,0.05);
        opacity:0.8;
    }


    select {
        width: 100%;
        min-width: 15ch;
        max-width: 30ch;
        border: 1px solid var(--select-border);
        border-radius: 0.25em;
        padding: 0.25em 0.5em;
        font-size: 1.25rem;
        cursor: pointer;
        line-height: 1.1;
        background-color: #fff;
        background-image: linear-gradient(to top, #f9f9f9, #fff 33%);
    }

        select::after {
            content: "";
            width: 0.8em;
            height: 0.5em;
            background-color: var(--select-arrow);
            clip-path: polygon(100% 0%, 0 0%, 50% 100%);
        }

    select {
         display: grid;
    }

    select {
         grid-template-areas: "select";
    }

        select,
        select:after {
            grid-area: select;
        }

    select {
        align-items: center;
    }

        select:after {
             justify-self: end;
        }

        select:focus + .focus {
            position: absolute;
            top: -1px;
            left: -1px;
            right: -1px;
            bottom: -1px;
            border: 2px solid var(--select-focus);
            border-radius: inherit;
        }

    select {
        position: relative;
    }
    input[type="submit"] {
        width: 45%;
        height: 40px;
        border: 1px solid;
        background: darkred;
        border-radius: 15px;
        font-size: 16px;
        color: #e9f4fb;
        font-weight: 700;
        cursor: pointer;
        outline: none;
    }
</style>
<html>

<body>
    <div class="center">
        <form id="frmovies" method="post" action=@Url.Action("Add_to_crate")>
            <div class="input-group">
                <label>Pizza Name:</label><input type="text" name="Pizza_name" readonly value="@Model.Rows[0]["Pizza_name"]" /><br />
                <label>Pizza id:</label><input type="text" name="Pizza_id" readonly value="@Model.Rows[0]["Pizza_id"]" /><br />
                <label>Pizza Price:</label> <input type="number" name="price" readonly value="@Model.Rows[0]["Pizza_price"]" />
            </div>
            <label>Quantity</label><input type="number" name="Quantity" required min="1" max="5" />
            <br />
            <div class="select">
                <label>Crust:</label>  <select name="Crust">
                    <option value="Thin">Thin</option>
                    <option value="Medium">Medium</option>
                    <option value="Thick">Thick</option>
                </select><br />
            <span class="focus"></span>
            </div>
            <div class="select">
                <label>Size :</label> <select name="size">

                    <option value="Small">Small</option>
                    <option value="Medium">Medium</option>
                    <option value="Large">Large</option>
                </select><br />
                <span class="focus"></span>
            </div>
            <div class="select">
                <label>Toppings : </label> <select name="Toppings">
                    <option value="Broccolini">Broccolini</option>
                    <option value="Potato">Potato</option>
                    <option value="sausage">sausage</option>
                    <option value="bacon">bacon</option>
                    <option value="mushroom">mushroom</option>
                    <option value="Gorgonzola ">Gorgonzola </option>
                    <option value="Black olives">Black olives</option>
                </select>


            </div>
            <br/>
            <br/>
            <input type="submit" value="Cancel" name="action">
            <input type="submit" value="Check Crate" name="action">

        </form>
    </div>
</body>
</html>
